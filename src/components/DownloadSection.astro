---
interface Props {
  t: any;
}

const { t } = Astro.props;
---

<section class="relative py-20 px-6 overflow-hidden">
  <!-- 背景星云 -->
  <div class="absolute inset-0">
    <div class="cosmic-nebula nebula-1" style="top: -20%; left: -10%;"></div>
    <div class="cosmic-nebula nebula-2" style="bottom: -20%; right: -10%;"></div>
  </div>

  <div class="relative z-10 max-w-5xl mx-auto text-center">
    <!-- 标签 -->
    <div class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full glass mb-8">
      <svg class="w-4 h-4 text-[var(--hydrogen-pink)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
      </svg>
      <span class="text-sm font-medium text-[var(--text-secondary)]">Get Started Today</span>
    </div>

    <!-- 主标题 -->
    <h2 class="mb-6">
      <span class="gradient-text">{t.download.title}</span>
    </h2>

    <!-- 副标题 -->
    <p class="text-xl text-[var(--text-secondary)] mb-12 max-w-2xl mx-auto">
      {t.download.subtitle}
    </p>

    <!-- 特性列表 -->
    <div class="flex flex-wrap justify-center gap-6 mb-12">
      <div class="flex items-center gap-2 text-[var(--text-secondary)]">
        <div class="w-5 h-5 rounded-full bg-gradient-to-r from-[var(--oxygen-blue)] to-[var(--nitrogen-cyan)] flex items-center justify-center">
          <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <span class="text-sm">Free Download</span>
      </div>
      <div class="flex items-center gap-2 text-[var(--text-secondary)]">
        <div class="w-5 h-5 rounded-full bg-gradient-to-r from-[var(--oxygen-blue)] to-[var(--nitrogen-cyan)] flex items-center justify-center">
          <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <span class="text-sm">No Ads</span>
      </div>
      <div class="flex items-center gap-2 text-[var(--text-secondary)]">
        <div class="w-5 h-5 rounded-full bg-gradient-to-r from-[var(--oxygen-blue)] to-[var(--nitrogen-cyan)] flex items-center justify-center">
          <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <span class="text-sm">Premium Features</span>
      </div>
    </div>

    <!-- 下载按钮 -->
    <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-12">
      <a
        href="https://apps.apple.com/us/app/stargazing-hub-sky-live/id1478601599"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-primary group flex items-center gap-4 text-lg px-10 py-5"
      >
        <svg class="w-10 h-10" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
        <div class="text-left">
          <div class="text-xs opacity-80">Download on the</div>
          <div class="font-bold">App Store</div>
        </div>
      </a>

      <a
        href="https://play.google.com/store/apps/details?id=com.twtapp"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-primary group flex items-center gap-4 text-lg px-10 py-5"
        style="--gradient-nebula: linear-gradient(135deg, #4ECDC4 0%, #22D3EE 50%, #A855F7 100%);"
      >
        <svg class="w-10 h-10" viewBox="0 0 24 24" fill="currentColor">
          <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z" />
        </svg>
        <div class="text-left">
          <div class="text-xs opacity-80">Get it on</div>
          <div class="font-bold">Google Play</div>
        </div>
      </a>
    </div>

    <!-- 其他平台信息 -->
    <p class="text-[var(--text-muted)] text-sm">
      Also available on <span class="text-white font-medium">iPad</span>, <span class="text-white font-medium">Apple Watch</span>, and <span class="text-white font-medium">Android Tablets</span>
    </p>
  </div>
</section>
