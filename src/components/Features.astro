---

<section class="relative py-20 px-6 overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <!-- 区域标题 -->
    <div class="text-center mb-12">
      <!-- 装饰标签 -->
      <div class="inline-flex items-center gap-2 px-3 py-1.5 md:px-4 md:py-2 rounded-full glass mb-6 max-w-full">
        <svg class="w-3.5 h-3.5 md:w-4 md:h-4 text-[var(--oxygen-blue)] shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
        <span class="text-xs md:text-sm text-[var(--text-secondary)] truncate">Powerful Features</span>
      </div>

      <h2 class="mb-4">
        <span class="gradient-text-cool">{t.features.title}</span>
      </h2>

      <p class="text-base text-[var(--text-secondary)] max-w-2xl mx-auto leading-relaxed">
        {t.features.subtitle}
      </p>
    </div>

    <!-- 功能卡片网格 -->
    <!-- Desktop: Grid Layout -->
    <div class="hidden lg:grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        features.map((feature, index) => (
          <div
            class={`group relative glass-card p-6 overflow-hidden`}
            style={`animation-delay: ${index * 0.1}s;`}
          >
            <!-- 背景渐变光晕 -->
            <div class={`absolute inset-0 bg-gradient-to-br ${feature.gradient} opacity-0 group-hover:opacity-10 transition-opacity duration-500`}></div>

            <!-- 内容 -->
            <div class="relative">
              <!-- 图标 -->
              <div class={`w-12 h-12 mb-4 bg-gradient-to-br ${feature.gradient} rounded-xl flex items-center justify-center group-hover:scale-110 group-hover:rotate-3 transition-all duration-500 shadow-lg`}>
                <div class="text-white" set:html={feature.icon} />
              </div>

              <!-- 标题 -->
              <h3 class="text-lg font-bold mb-2 text-white group-hover:text-[var(--hydrogen-pink)] transition-colors duration-300">
                {t.features[feature.key].title}
              </h3>

              <!-- 描述 -->
              <p class="text-[var(--text-secondary)] text-sm leading-relaxed">
                {t.features[feature.key].description}
              </p>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Mobile: Grid Scroll (Auto Play) -->
    <div id="features-mobile-gallery" class="lg:hidden grid grid-rows-2 grid-flow-col gap-4 overflow-x-auto pb-6 snap-x snap-mandatory no-scrollbar -mx-6 px-6 scroll-smooth">
      {
        features.map((feature, index) => (
          <div class="snap-start w-[70vw] sm:w-[300px] relative glass-card p-5 overflow-hidden flex flex-col justify-center h-full">
             <!-- 背景渐变光晕 -->
             <div class={`absolute inset-0 bg-gradient-to-br ${feature.gradient} opacity-5 transition-opacity duration-500`}></div>

             <!-- 内容 -->
             <div class="relative flex items-start gap-4">
               <!-- 图标 (Smaller) -->
               <div class={`w-10 h-10 shrink-0 bg-gradient-to-br ${feature.gradient} rounded-lg flex items-center justify-center shadow-lg`}>
                 <div class="text-white transform scale-75" set:html={feature.icon} />
               </div>
 
               <div>
                 <!-- 标题 -->
                 <h3 class="text-base font-bold mb-1 text-white leading-tight">
                   {t.features[feature.key].title}
                 </h3>
   
                 <!-- 描述 (Truncated) -->
                 <p class="text-[var(--text-secondary)] text-xs leading-relaxed line-clamp-2">
                   {t.features[feature.key].description}
                 </p>
               </div>
             </div>
          </div>
        ))
      }
    </div>

    <script is:inline>
      (function() {
        const gallery = document.getElementById('features-mobile-gallery');
        if (!gallery) return;

        let interval;
        // In grid-flow-col, width depends on column width. 
        // We approximate it to scroll one "page" (which is one column width)
        
        function startAutoPlay() {
          interval = setInterval(() => {
            const scrollAmount = gallery.clientWidth * 0.8; // Scroll most of the screen width

            // If at end, scroll to start
            if (gallery.scrollLeft + gallery.clientWidth >= gallery.scrollWidth - 10) {
              gallery.scrollTo({ left: 0, behavior: 'smooth' });
            } else {
              gallery.scrollBy({ left: scrollAmount, behavior: 'smooth' });
            }
          }, 4000); // Slower than hero
        }

        function stopAutoPlay() {
          clearInterval(interval);
        }

        // Start
        startAutoPlay();

        // Pause on interaction
        gallery.addEventListener('touchstart', stopAutoPlay, { passive: true });
        gallery.addEventListener('touchend', () => setTimeout(startAutoPlay, 5000), { passive: true });
      })();
    </script>

    <!-- 底部统计 -->
    <div class="mt-12 grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="glass-card p-6 text-center">
        <div class="text-2xl font-bold gradient-text-warm mb-1">{t.features.stats?.bortle?.value}</div>
        <div class="text-xs text-[var(--text-muted)] uppercase tracking-wider">{t.features.stats?.bortle?.label}</div>
      </div>
      <div class="glass-card p-6 text-center">
        <div class="text-2xl font-bold gradient-text-cool mb-1">{t.features.stats?.seeing?.value}</div>
        <div class="text-xs text-[var(--text-muted)] uppercase tracking-wider">{t.features.stats?.seeing?.label}</div>
      </div>
      <div class="glass-card p-6 text-center">
        <div class="text-2xl font-bold gradient-text mb-1">{t.features.stats?.tracker?.value}</div>
        <div class="text-xs text-[var(--text-muted)] uppercase tracking-wider">{t.features.stats?.tracker?.label}</div>
      </div>
      <div class="glass-card p-6 text-center">
        <div class="text-2xl font-bold gradient-text-warm mb-1">{t.features.stats?.ar?.value}</div>
        <div class="text-xs text-[var(--text-muted)] uppercase tracking-wider">{t.features.stats?.ar?.label}</div>
      </div>
    </div>
  </div>
</section>
