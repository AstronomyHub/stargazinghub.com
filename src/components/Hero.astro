---
import googleplayScreenshotsConfig from '../googleplay-screenshots.config.json';

interface Props {
  t: any;
  lang?: string;
}

const { t, lang = 'en' } = Astro.props;

// 使用 Google Play 截图
const gpConfig = googleplayScreenshotsConfig[lang as keyof typeof googleplayScreenshotsConfig];
const screenshots = gpConfig?.files || [];

// 截图数量（用于 JavaScript）
const screenshotCount = screenshots.length;

// 容器尺寸 - Google Play: 662x1440 (比例 0.46) -> 宽度 280px, 高度 ~609px
const containerWidth = 280;
const containerHeight = 609;
const padding = 16;
const outerWidth = containerWidth + (padding * 2);
---

<section class="relative flex items-center justify-center px-6 py-16 md:py-20 overflow-hidden">
  <!-- 流动星云背景 -->
  <div class="cosmic-nebula nebula-1"></div>
  <div class="cosmic-nebula nebula-2"></div>
  <div class="cosmic-nebula nebula-3"></div>

  <div class="relative z-10 max-w-7xl mx-auto">
    <div class="text-center">
      <!-- 标签 -->
      <div class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full glass mb-8 animate-reveal">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[var(--hydrogen-pink)] opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-[var(--hydrogen-pink)]"></span>
        </span>
        <span class="text-sm font-medium text-[var(--text-secondary)]">Available on iOS & Android</span>
      </div>

      <!-- 主标题 -->
      <h1 class="text-4xl md:text-6xl font-bold mb-4 animate-reveal" style="animation-delay: 0.1s;">
        <span class="gradient-text">{t.hero.title}</span>
      </h1>

      <!-- 副标题 -->
      <p class="text-xl md:text-2xl text-[var(--text-secondary)] mb-4 max-w-2xl mx-auto animate-reveal" style="animation-delay: 0.2s;">
        {t.hero.subtitle}
      </p>

      <!-- 描述 -->
      <p class="text-sm md:text-base text-[var(--text-muted)] mb-10 max-w-2xl mx-auto leading-relaxed animate-reveal" style="animation-delay: 0.3s;">
        {t.hero.description}
      </p>

      <!-- 应用截图轮播 -->
      <div class="screenshot-container relative mx-auto mb-10 animate-scale" style="animation-delay: 0.4s; width: 312px;">
        <!-- 外发光效果 -->
        <div class="absolute inset-0 bg-gradient-to-r from-[var(--hydrogen-pink)] via-[var(--carbon-purple)] to-[var(--nitrogen-cyan)] rounded-[2.5rem] blur-3xl opacity-30 animate-pulse"></div>

        <!-- 手机边框 -->
        <div class="relative glass-strong rounded-[2.5rem] p-4">
          <div class="bg-[var(--cosmic-void)] rounded-[2rem] overflow-hidden relative mx-auto screenshot-box">
            <!-- 刘海 -->
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-28 h-6 bg-black rounded-b-2xl z-20"></div>

            <!-- 截图轮播 -->
            <div class="relative w-full h-full" id="hero-screenshot-carousel">
              {
                screenshots.map((screenshot, index) => (
                  <div
                    class={`absolute inset-0 transition-opacity duration-700 ease-in-out ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
                    id={`hero-screenshot-${index}`}
                  >
                    <img
                      src={screenshot}
                      alt="Stargazing Hub Screenshot"
                      class="w-full h-full object-contain"
                      loading="eager"
                    />
                  </div>
                ))
              }
            </div>

            <!-- 轮播指示器 -->
            <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2 z-20" id="hero-screenshot-indicators">
              {
                screenshots.map((_, index) => (
                  <button
                    class={`transition-all duration-300 rounded-full ${index === 0 ? 'w-8 h-2 bg-white' : 'w-2 h-2 bg-white/40 hover:bg-white/60'}`}
                    aria-label="View screenshot"
                    data-index={index}
                  ></button>
                ))
              }
            </div>

            <!-- 截图数量提示 -->
            <div class="absolute top-8 right-4 text-xs text-white/60 bg-black/40 px-2 py-1 rounded-full z-20" id="hero-screenshot-counter">
              1 / {screenshots.length}
            </div>
          </div>
        </div>

        <!-- 装饰性粒子 -->
        <div class="absolute -top-6 -right-6 w-12 h-12 bg-[var(--sulfur-gold)] rounded-full blur-2xl opacity-40 animate-float" style="animation-delay: 1s;"></div>
        <div class="absolute -bottom-6 -left-6 w-16 h-16 bg-[var(--oxygen-blue)] rounded-full blur-2xl opacity-30 animate-float" style="animation-delay: 2s;"></div>
      </div>

      <!-- 下载按钮组 -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-reveal" style="animation-delay: 0.6s;">
        <a
          href="https://apps.apple.com/us/app/stargazing-hub-sky-live/id1478601599"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary group"
        >
          <svg class="w-8 h-8 mr-3" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
          </svg>
          <span>Download on the</span>
          <span class="font-bold">App Store</span>
        </a>

        <a
          href="https://play.google.com/store/apps/details?id=com.twtapp"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary group"
          style="--gradient-nebula: linear-gradient(135deg, #4ECDC4 0%, #22D3EE 50%, #A855F7 100%);"
        >
          <svg class="w-8 h-8 mr-3" viewBox="0 0 24 24" fill="currentColor">
            <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z" />
          </svg>
          <span>Get it on</span>
          <span class="font-bold">Google Play</span>
        </a>
      </div>

      <!-- 统计数据 -->
      <div class="mt-16 grid grid-cols-3 gap-6 max-w-xl mx-auto animate-reveal" style="animation-delay: 0.8s;">
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold gradient-text-warm mb-1">1M+</div>
          <div class="text-xs text-[var(--text-muted)] uppercase tracking-wider">Downloads</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold gradient-text-cool mb-1">4.8</div>
          <div class="text-xs text-[var(--text-muted)] uppercase tracking-wider">Rating</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold gradient-text mb-1">150+</div>
          <div class="text-xs text-[var(--text-muted)] uppercase tracking-wider">Countries</div>
        </div>
      </div>
    </div>
  </div>

  <!-- 滚动指示器 -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce z-20">
    <svg class="w-6 h-6 text-[var(--text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<script is:inline>
  // 轮播功能 - 动态计算截图数量
  (function() {
    // 动态获取截图数量
    function getScreenshotCount() {
      const buttons = document.querySelectorAll('#hero-screenshot-indicators button');
      return buttons.length;
    }

    let currentScreenshot = 0;

    // 显示指定索引的截图
    window.showHeroScreenshot = function(index) {
      const totalScreenshots = getScreenshotCount();

      // 隐藏所有截图
      for (let i = 0; i < totalScreenshots; i++) {
        const el = document.getElementById('hero-screenshot-' + i);
        if (el) {
          el.classList.remove('opacity-100');
          el.classList.add('opacity-0');
        }
      }

      // 显示选中的截图
      const selected = document.getElementById('hero-screenshot-' + index);
      if (selected) {
        selected.classList.remove('opacity-0');
        selected.classList.add('opacity-100');
      }

      // 更新指示器
      const buttons = document.querySelectorAll('#hero-screenshot-indicators button');
      buttons.forEach((btn, i) => {
        if (i === index) {
          btn.className = 'transition-all duration-300 rounded-full w-8 h-2 bg-white';
        } else {
          btn.className = 'transition-all duration-300 rounded-full w-2 h-2 bg-white/40 hover:bg-white/60';
        }
      });

      // 更新计数器
      const counter = document.getElementById('hero-screenshot-counter');
      if (counter) {
        counter.textContent = (index + 1) + ' / ' + totalScreenshots;
      }

      currentScreenshot = index;
    };

    // 初始化轮播
    function initCarousel() {
      // 为指示器按钮添加点击事件
      const buttons = document.querySelectorAll('#hero-screenshot-indicators button');
      buttons.forEach((btn) => {
        const index = parseInt(btn.getAttribute('data-index'));
        if (!isNaN(index)) {
          btn.addEventListener('click', function() {
            window.showHeroScreenshot(index);
          });
        }
      });

      // 自动轮播
      setInterval(function() {
        const totalScreenshots = getScreenshotCount();
        currentScreenshot = (currentScreenshot + 1) % totalScreenshots;
        window.showHeroScreenshot(currentScreenshot);
      }, 4000);
    }

    // 等待 DOM 加载完成
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initCarousel);
    } else {
      initCarousel();
    }
  })();
</script>

<style define:vars={{ containerWidth, containerHeight }}>
  /* Hero 区域特定动画 */
  @keyframes pulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.5; }
  }

  /* 截图容器尺寸 */
  .screenshot-box {
    width: calc(var(--containerWidth) * 1px);
    height: calc(var(--containerHeight) * 1px);
  }
</style>
