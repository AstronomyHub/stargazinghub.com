---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import Features from '../../components/Features.astro';
import Testimonials from '../../components/Testimonials.astro';
import DownloadSection from '../../components/DownloadSection.astro';
import Footer from '../../components/Footer.astro';
import { translations } from '../../i18n/ui';

const lang = 'ru';
const t = translations[lang];
---

<Layout title="Лучшее бесплатное приложение для наблюдения за звездами: карта звездного неба и световое загрязнение" lang={lang} description="Лучшее бесплатное приложение для наблюдения за звездами. Карта звездного неба в реальном времени, карта светового загрязнения, трекер МКС и астрономическая погода. AR-карта звездного неба для идентификации звезд, отслеживание комет и спутников. Лучшее время наблюдения сегодня с показателями seeing, прозрачности и календарь фаз луны. Бесплатное приложение для наблюдения за звездами.">
  <main>
    <Hero t={t} lang={lang} />
    <Features t={t} />
    <Testimonials t={t} />
    <DownloadSection t={t} />
  </main>
  <Footer t={t} lang={lang} />
</Layout>
