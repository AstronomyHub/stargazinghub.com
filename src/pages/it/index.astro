---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import Features from '../../components/Features.astro';
import Testimonials from '../../components/Testimonials.astro';
import DownloadSection from '../../components/DownloadSection.astro';
import Footer from '../../components/Footer.astro';
import { translations } from '../../i18n/ui';

const lang = 'it';
const t = translations[lang];
---

<Layout title="Migliore app di astronomia gratuita: mappa del cielo & inquinamento luminoso" lang={lang} description="Migliore app di astronomia gratuita con mappa del cielo in tempo reale, mappa dell'inquinamento luminoso, tracker ISS e meteo astronomico. Vista del cielo AR per identificare stelle, seguire comete e satelliti. Momento migliore per osservare oggi con seeing, trasparenza e calendario delle fasi lunari. App di astronomia gratuita.">
  <main>
    <Hero t={t} lang={lang} />
    <Features t={t} />
    <Testimonials t={t} />
    <DownloadSection t={t} />
  </main>
  <Footer t={t} lang={lang} />
</Layout>
