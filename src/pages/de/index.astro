---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import Features from '../../components/Features.astro';
import Testimonials from '../../components/Testimonials.astro';
import DownloadSection from '../../components/DownloadSection.astro';
import Footer from '../../components/Footer.astro';
import { translations } from '../../i18n/ui';

const lang = 'de';
const t = translations[lang];
---

<Layout title="Beste kostenlose Sternen-App: Sternenkarte & Lichtverschmutzung" lang={lang} description="Beste kostenlose Sternenbeobachtungs-App mit Echtzeit-Sternenkarte, Lichtverschmutzungskarte, ISS-Tracker & Astronomiewetter. AR-Sternenansicht zur Sternenidentifikation, Kometen- und Satellitenverfolgung. Heute beste Beobachtungszeit mit Seeing, Transparenz & Mondphasenkalender. Kostenlose Sternen-App.">
  <main>
    <Hero t={t} lang={lang} />
    <Features t={t} />
    <Testimonials t={t} />
    <DownloadSection t={t} />
  </main>
  <Footer t={t} lang={lang} />
</Layout>
