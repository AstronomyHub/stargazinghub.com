---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import Features from '../../components/Features.astro';
import Testimonials from '../../components/Testimonials.astro';
import DownloadSection from '../../components/DownloadSection.astro';
import Footer from '../../components/Footer.astro';
import { translations } from '../../i18n/ui';

const lang = 'zh';
const t = translations[lang];
---

<Layout title="最佳观星APP：星空图与光污染地图" lang={lang} description="最佳免费观星APP，实时星空图、光污染地图、空间站追踪与天文天气。AR实景星空识别恒星，追踪彗星与卫星。今晚最佳观星时间，视宁度、透明度与月相日历。免费观星应用。">
  <main>
    <Hero t={t} lang={lang} />
    <Features t={t} />
    <Testimonials t={t} />
    <DownloadSection t={t} />
  </main>
  <Footer t={t} lang={lang} />
</Layout>
